            <avalonDock:LayoutPanel Orientation="Horizontal">
                <avalonDock:LayoutAnchorablePaneGroup Orientation="Horizontal" >
                    <avalonDock:LayoutAnchorablePane Name="ToolsPane"  DockMinWidth="500">
