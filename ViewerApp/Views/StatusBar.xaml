<UserControl x:Class="ViewerApp.Views.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewerApp.Views"
                       xmlns:prism="http://prismlibrary.com/"
              prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
           <StatusBar Height="25">
            <StatusBarItem Height="25">
                   <!--<Button Width="50" Height="20" ></Button>-->
                <Label Width="auto" BorderThickness="0,0,0,0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"   Content="{Binding Path=StatusContent, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Height="25"></Label>
               </StatusBarItem>
           </StatusBar> 
    </Grid>
</UserControl>
